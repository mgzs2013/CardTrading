@model IEnumerable<CardTrading.Models.Card>

@{
    ViewData["Title"] = "View Cards";
}

<h1>Trade Your Cards!</h1>

<div class="card-wrapper">

    @foreach (var card in Model)
    {
        <div class="card" style="width: 18rem;">
            <img src="@card.CardPhoto" class="card-img-top" alt="@card.PokemonName">
            <div class="card-body">
                <h5 class="card-title">@card.PokemonName</h5>
                <p class="card-text">Card Condition: @card.CardCondition</p>
                @if (card.User != null)
                {
                    <p>Trade/Buy from @card?.User?.Email</p>
                }

                @* <a href="#" class="btn btn-primary">Go somewhere</a> *@
            </div>
        </div>

    }
</div>
