@model IEnumerable<CardTrading.Models.Card>

    @{
        ViewData["Title"] = "Update Cards";
    } 
    </div>

}


<p>
    <a asp-action="Create">Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.CardPhoto)
            </td>
            <th>
                @Html.DisplayNameFor(model => model.PokemonName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardCondition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ForSale)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <th>
                <img class="manage-card" src="@item.CardPhoto">
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.PokemonName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardCondition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ForSale)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CardId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CardId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CardId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
